{
  "name": "no-more-jobs",
  "version": "0.0.1",
  "description": "Simple task tracker built with web components",
  "repository": "https://github.com/mrtibbles/no-more-jobs",
  "author": "@MrTibbles",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "eslint": "^5.16.0",
    "lint-staged": "^8.1.6",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0"
  },
  "lint-staged": {
    "*.js": [
      "lint:js",
      "git add"
    ]
  },
  "pre-commit": {
    "run": [
      "lint:staged"
    ],
    "silent": true
  },
  "scripts": {
    "start:dev": "parcel app/index.html --log-level 2",
    "lint:js": "prettier --write app/**/*.js && eslint --fix \"app/**/*.js\"",
    "lint:staged": "lint-staged"
  },
}
